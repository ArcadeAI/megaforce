{
	"name": "megaforce",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"better-auth": "^1.4.9",
			"@prisma/client": "^7.2.0",
			"@elysiajs/eden": "^1.4.6"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"check-eden-types": "bun run scripts/check-eden-types.ts",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @megaforce/db db:push",
		"db:studio": "turbo -F @megaforce/db db:studio",
		"db:generate": "turbo -F @megaforce/db db:generate",
		"db:migrate": "turbo -F @megaforce/db db:migrate",
		"db:start": "turbo -F @megaforce/db db:start",
		"db:watch": "turbo -F @megaforce/db db:watch",
		"db:stop": "turbo -F @megaforce/db db:stop",
		"db:down": "turbo -F @megaforce/db db:down",
		"check": "eslint --fix . && prettier --write .",
		"prepare": "husky",
		"lint": "eslint .",
		"knip": "knip",
		"lint:sh": "shellcheck **/*.sh"
	},
	"dependencies": {
		"@megaforce/env": "workspace:*",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@eslint/js": "9",
		"@megaforce/config": "workspace:*",
		"@next/eslint-plugin-next": "^16.1.6",
		"@tanstack/eslint-plugin-query": "^5.91.4",
		"@types/bun": "catalog:",
		"dependency-cruiser": "^17.3.8",
		"eslint": "9",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-better-tailwindcss": "3",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.5.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-regexp": "^3.0.0",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sonarjs": "^3.0.6",
		"eslint-plugin-unicorn": "^62.0.0",
		"eslint-plugin-vitest": "^0.5.4",
		"globals": "^17.3.0",
		"husky": "^9.1.7",
		"knip": "^5.83.1",
		"lint-staged": "^16.1.2",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"safeword": "^0.15.14",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,jsx,tsx}": [
			"eslint --fix"
		],
		"*.{js,ts,cjs,mjs,jsx,tsx,json,css,md}": [
			"prettier --write"
		]
	},
	"overrides": {
		"@typescript-eslint/utils": "^8.54.0"
	},
	"packageManager": "bun@1.3.4"
}
