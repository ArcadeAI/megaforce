# Arcade Integration
USER_ID=your-email@example.com
ARCADE_API_KEY=your-arcade-api-key             
ARCADE_PROVIDER_ID=your-arcade-provider-id

# Twitter Agent Mode (optional)
# Set to 'true' to use full content processing agent (slower but more features)
# Set to 'false' or leave blank to use direct Arcade integration (faster, simpler)
USE_FULL_TWITTER_AGENT=false

# LLM Providers (Required for content generation)
OPENAI_API_KEY=your_openai_api_key_here          
GOOGLE_API_KEY=your_google_api_key_here          
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-2024-08-06

# Database Configuration
# Set DATABASE_TYPE to either 'supabase' or 'postgresql'
DATABASE_TYPE=supabase

# Option 1: Supabase Database Configuration
# IMPORTANT: Use the transaction pooler URL format (this is what works!)
# Get this from: Supabase Dashboard → Settings → Database → Connection string → Transaction
SUPABASE_DATABASE_URL=postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-DB-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Supabase API Configuration (for client libraries - optional)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Example working format:
# SUPABASE_DATABASE_URL=postgresql://postgres.mogstftnhnusovapkooa:PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres
# SUPABASE_URL=https://mogstftnhnusovapkooa.supabase.co

# Option 2: Local PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=megaforce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# API Security
SECRET_KEY=your_jwt_secret_key_here_change_in_production

# Development/Debug Settings
SQL_DEBUG=false
API_BASE_URL=http://localhost:8000

# Testing Configuration
RUN_INTEGRATION_TESTS=false                      
TEST_ARCADE_USER_ID=your_test_arcade_user_id_here
