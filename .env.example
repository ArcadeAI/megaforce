# Project-specific secrets template
# Copy to .env and fill in your values
#
# Session-specific variables (DATABASE_URL, etc.) are automatically
# provided in .env.claude-session - you can load it in your component's .env:
#
# In bash: source ../.env.claude-session
# In Node.js: require('dotenv').config({ path: '../.env.claude-session' })

# Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis connection string for caching and session storage
REDIS_URL=redis://localhost:6379

# OpenRouter API key for LLM interactions
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Arcade API key for tool integrations
ARCADE_API_KEY=your_arcade_api_key_here

# Encryption key for social credentials (must be 32+ characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# Better Auth configuration
BETTER_AUTH_SECRET=your_better_auth_secret_min_32_chars
BETTER_AUTH_URL=http://localhost:3000

# CORS origin for API requests
CORS_ORIGIN=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development
